<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:oxy="http://oxyplot.org/wpf">
    <Style TargetType="{x:Type oxy:Plot}" BasedOn="{StaticResource {x:Type oxy:Plot}}">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="PlotAreaBorderColor" Value="#B3B3B3"/>
        <Setter Property="TextColor" Value="#E0E0E0"/>
      
        <Setter Property="TitleColor" Value="#E0E0E0"/>
        <Setter Property="LegendTextColor" Value="#E0E0E0"/>
      
    </Style>

  
</ResourceDictionary>